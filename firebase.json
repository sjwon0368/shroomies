{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/stuff",
        "destination": "/stuff.html"
      },
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/error",
        "destination": "/404.html"
      }
    ]
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  },
  "database": {
    "rules": "database.rules.json"
  }
}
